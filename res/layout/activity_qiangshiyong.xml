<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.bignerdranch.android.hulucat.TiaoZhuanActivity">

    <com.bignerdranch.android.hulucat.PullUpToLoadMore
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/pullUpToLoadMore">

        <com.bignerdranch.android.hulucat.MyScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_weight="0.01"
                    android:background="#f8f8f8"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="150dp"
                        android:layout_height="140dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/yueshifengyin"
                        android:scaleType="center"/>

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:text="悦诗风吟绿茶纯净卸妆水"
                        android:textColor="#101010"
                        android:textSize="27dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="150ml/￥105.00"
                        android:textColor="#101010"
                        android:textSize="19dp"
                        android:id="@+id/textView6" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="31dp"
                        android:layout_marginTop="3dp"
                        android:layout_weight="0.04"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="15dp"
                            android:background="#ff7043"
                            android:text="卸妆水"
                            android:textColor="#ffffff"
                            android:textSize="16dp"
                            />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/buttonstyle"
                            android:text="祛痘"
                            android:textSize="16dp"
                            />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/buttonstyle"
                            android:text="水油平衡"
                            android:textSize="16dp"
                            />
                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:orientation="horizontal"
                                  android:weightSum="1">
                        <LinearLayout
                            android:layout_width="158dp"
                            android:layout_height="55dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="试用装20份"
                                android:layout_gravity="center"
                                android:textSize="20dp"
                                android:textColor="#e51c23"
                                android:layout_marginTop="5dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="38dp"
                                android:text="1000人抽"
                                android:layout_gravity="center"
                                android:textSize="15dp"
                                android:textColor="#e51c23"
                                android:id="@+id/textView7" />


                        </LinearLayout>
                        <ProgressBar
                            android:layout_marginTop="15dp"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="108dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:max="100"
                            android:progress="28"
                            android:progressDrawable="@drawable/processbar"
                            />

                        <Button
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="15dp"
                            android:text="抢名额"
                            android:textColor="#ffffff"
                            android:textSize="18dp"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:background="#ff7043"

                            android:id="@+id/button2" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.04"
                    android:background="#f8f8f8"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TabHost
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TabWidget
                                android:id="@android:id/tabs"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <FrameLayout
                                android:id="@android:id/tabcontent"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:id="@+id/详细介绍"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/yueshifengyinchuashu"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/试用反馈"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                </LinearLayout>


                            </FrameLayout>
                        </LinearLayout>
                    </TabHost>
                </LinearLayout>
            </LinearLayout>

        </com.bignerdranch.android.hulucat.MyScrollView>

        <com.bignerdranch.android.hulucat.MyScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/container1">
            </LinearLayout>
        </com.bignerdranch.android.hulucat.MyScrollView>
    </com.bignerdranch.android.hulucat.PullUpToLoadMore>
</RelativeLayout>